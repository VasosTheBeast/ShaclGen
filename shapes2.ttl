@prefix ex: <http://www.example.org#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:Job_Shape a sh:NodeShape ;
    sh:targetClass ex:Job .

ex:Person_Shape a sh:NodeShape ;
    sh:property ex:hasAge_PropertyShape,
        ex:hasDate_PropertyShape,
        ex:hasJob_PropertyShape,
        ex:hasName_PropertyShape ;
    sh:targetClass ex:Person .

ex:hasAge_PropertyShape a sh:PropertyShape ;
    sh:datatype xsd:integer ;
    sh:path ex:hasAge .

ex:hasDate_PropertyShape a sh:PropertyShape ;
    sh:datatype xsd:date ;
    sh:maxCount 1 ;
    sh:maxInclusive "2000-01-01"^^xsd:date ;
    sh:minCount 1 ;
    sh:minInclusive "3000-01-01"^^xsd:date ;
    sh:path ex:hasDate .

ex:hasJob_PropertyShape a sh:PropertyShape ;
    sh:class ex:Job ;
    sh:path ex:hasJob .

ex:hasName_PropertyShape a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:path ex:hasName .

